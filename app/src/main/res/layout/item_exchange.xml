<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_30sdp"
    android:layout_marginEnd="@dimen/_30sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from_text"
            style="@style/TextStyle1" />

        <TextView
            android:id="@+id/from_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/from"
            android:text="@string/from_placeholder"
            style="@style/TextStyle2" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/from_val"
            android:padding="@dimen/_12sdp"
            android:text="@string/rate_placeholder"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rate"
            android:text="@string/to_text"
            style="@style/TextStyle1" />

        <TextView
            android:id="@+id/to_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rate"
            android:layout_below="@id/to"
            android:text="@string/to_placeholder"
            style="@style/TextStyle2" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>